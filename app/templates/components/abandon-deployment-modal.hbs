{{#pf-modal-base idModal='abandonDeploymentModal'
                 openModal=openModal
                 title="Delete QCI Deployment"}}

      {{#pf-modal-body}}
          Are you sure that you want to delete this deployment?
      {{/pf-modal-body}}

      {{#pf-modal-footer}}
          <button {{action 'closeModal'}} class="btn btn-default">
              No
          </button>
          <button {{action 'executeAbandonment'}} class="btn btn-danger">
              Yes, Delete Deployment
          </button>
      {{/pf-modal-footer}}

{{/pf-modal-base}}
