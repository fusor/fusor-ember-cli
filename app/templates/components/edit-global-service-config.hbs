{{#pf-modal-base idModal='editGlobalServiceConfigModal'
                 openModal=openModal
                 title='Edit Global Configuration'}}

  {{#pf-modal-body}}
    <div role="tabpanel" class="tab-pane active global-config-settings-content">
      <div class="form-horizontal">
        <fieldset>
          <div class="required">
            {{#each globalPlanParameters as |planParameter|}}
              {{#if planParameter.isBoolean}}
                {{check-f label=planParameter.label checked=planParameter.newValue labelSize='col-md-6' inputSize='col-md-5' isRequired=false helpText=planParameter.description cssId=planParameter.key}}
              {{else}}
                {{text-f label=planParameter.label value=planParameter.newValue type=planParameter.type canShowPassword=planParameter.canShowPassword labelSize='col-md-6' inputSize='col-md-5' isRequired=false helpText=planParameter.description cssId=planParameter.key}}
              {{/if}}
            {{/each}}
          </div>
        </fieldset>
      </div>
    </div>
  {{/pf-modal-body}}

  {{#pf-modal-footer}}
        <button type="cancel" class="btn btn-default" {{action "cancelGlobalServiceConfig"}} data-qci='cancel-edit-global-config'>Cancel</button>
        <button type="submit" class="btn btn-primary" {{action "saveGlobalServiceConfig"}} data-qci='save-edit-global-config'>Save</button>
  {{/pf-modal-footer}}

{{/pf-modal-base}}
